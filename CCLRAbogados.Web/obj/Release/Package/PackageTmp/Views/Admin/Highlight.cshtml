@model CCLRAbogados.Data.HighLight
@using CCLRAbogados.Helpers;
@{
    ViewBag.Title = "Highlight";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Highlight</h2>

    @using (Html.BeginForm("UpdateHighlight", "Admin", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <div class="row m-b">
                    <div class="col-xs-12 col-md-6">    
            @Html.Partial("_showAlertMessages")
        <section class="panel panel-default">
        <header class="panel-heading font-bold">@ViewBag.PathNames</header>
        <div class="panel-body">
            <div class="form-group">
                <label>Nombre</label>
                @Html.TextBoxFor(u => u.Nombre, new { @class="form-control", @placeholder="Ingrese el nombre a resaltar", @type="text", @maxlength="100"})
                @Html.ValidationMessageFor(u => u.Nombre)
            </div>
            <div class="line line-dashed line-lg pull-in"></div>
            <div class="form-group">
                <label>Descripción corta</label>
                @Html.TextBoxFor(u => u.Descripcion, new { @class="form-control", @placeholder="Ingrese la descripción corta", @type="text", @maxlength="120"})
                @Html.ValidationMessageFor(u => u.Descripcion)
            </div>
            <div class="form-group">
                <label>Descripción larga</label>
                @Html.TextAreaFor(u => u.Resumen, new { @class="form-control", @placeholder="Ingrese la descripción larga", @type="text", @rows="5", @maxlength="600"})
                @Html.ValidationMessageFor(u => u.Resumen)
            </div>
            <div class="form-group">
                <label>Imagen</label>
                @Html.TextBoxFor(u => u.Image, new { @class="form-control", @placeholder="Ingrese la imagen a mostrar", @type="text", @maxlength="50"})
                @Html.ValidationMessageFor(u => u.Image)
            </div>
            <div class="line line-dashed line-lg pull-in"></div>
            <div class="form-group">
                <label>Estilos</label>
                @Html.TextBoxFor(u => u.Css, new { @class="form-control", @placeholder="Ingrese los estilos de color", @type="text", @list="clasescss", @maxlength="100"})
                @Html.ValidationMessageFor(u => u.Css)
                <datalist id="clasescss">
                    @foreach (var clase in ViewBag.ClasesCss) { 
                        <option value="@clase"></option>
                    }
                </datalist>
            </div>
            <div class="line line-dashed line-lg pull-in"></div>
            <div class="form-group row">
                <div class="col-md-3">
                    <label>Orden</label>
                    @Html.TextBoxFor(u => u.Orden, new { @class="form-control", @placeholder="Ingrese la prioridad", @type="number", @min="1", @value="1"})
                    @Html.ValidationMessageFor(u => u.Orden)
                </div>
            </div>
            <div class="line line-dashed line-lg pull-in"></div>
            <div class="checkbox">
                <label>@Html.CheckBoxFor(p => p.Estado)
                        Activo</label>
                @Html.ValidationMessageFor(p => p.Estado)
            </div>
            <div class="line line-dashed line-lg pull-in"></div>
            @Html.HiddenFor(u=>u.IdPagina)
            <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-save"></i> Guardar Cambios</button>
            <a class="btn btn-sm btn-danger" href="@Url.Action("Pagina", new { id = Model.IdPagina})">Salir</a>
        </div>
        </section>
                        </div>
            </div>
    }
