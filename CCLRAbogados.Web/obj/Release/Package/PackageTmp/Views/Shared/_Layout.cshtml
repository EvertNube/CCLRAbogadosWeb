    <!-- tabs -->
    <script src="~/Content/themes/cclra/js/tabs/assets/js/responsive-tabs.min.js"></script>
    <script src="~/Content/themes/cclra/js/universal/custom.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
